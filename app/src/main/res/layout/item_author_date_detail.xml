<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/author_date_detail_cover"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@mipmap/recommend_bg_liked"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/author_date_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大胡子辣妹ffs打发打发了快速的rf"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/author_date_detail_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#记录  /  09.26"
        android:layout_marginTop="145dp"
        android:textSize="13sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/author_date_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VICE中国"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:layout_below="@id/author_date_detail_duration"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true" />


</RelativeLayout>