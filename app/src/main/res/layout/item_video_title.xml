<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_dark"
    android:alpha="0.7">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_iv"
        android:src="@mipmap/mini_back_focus"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/file_name"
        style="@style/MediaController_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:ellipsize="marquee"
        android:textSize="12sp"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
          />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/back_latest_pos_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:textColor="#ffffff"
            android:text="回上次切换处"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/change_video_iv_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/action_low_mode"
                android:paddingBottom="10dp"/>
            <ImageView
                android:id="@+id/change_video_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@mipmap/action_normal_mode"
                android:paddingBottom="7dp"/>
            <ImageView
                android:id="@+id/change_video_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@mipmap/action_high_mode"
                android:paddingBottom="7dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/currenttime_tv"
            style="@style/MediaController_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:textSize="12dp"
            android:text="15:12"
            android:singleLine="true"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/download_precent_tv"
            style="@style/MediaController_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:textSize="12dp"
            android:text="38%"
            android:singleLine="true"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mediacontroller_setting"
            android:background="@mipmap/mediacontroller_setting"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"
            />
    </LinearLayout>

</RelativeLayout>