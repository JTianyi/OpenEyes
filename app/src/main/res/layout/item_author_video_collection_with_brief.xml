<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/author_video_collection_with_brief_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="17dp"
            android:src="@mipmap/three_mins" />

        <TextView
            android:id="@+id/author_video_collection_with_brief_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/author_video_collection_with_brief_icon"
            android:layout_toRightOf="@id/author_video_collection_with_brief_icon"
            android:text="饭盒Foodlink"
            android:textColor="#444444"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/author_video_collection_with_brief_subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/author_video_collection_with_brief_title"
            android:layout_marginLeft="20sp"
            android:layout_toRightOf="@id/author_video_collection_with_brief_title"
            android:text="饭盒Foodlink"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/author_video_collection_with_brief_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/author_video_collection_with_brief_icon"
            android:layout_toRightOf="@id/author_video_collection_with_brief_icon"
            android:ellipsize="end"
            android:maxEms="18"
            android:singleLine="true"
            android:text="饭盒话说多喝点水"
            android:textColor="#444444"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_action_more_arrow_dark" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/author_video_collection_with_brief_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/author_brief_card_icon"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:background="#d5d5d5" />
</LinearLayout>